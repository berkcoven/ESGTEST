
@{
    ViewBag.Title = "CreateTeam";
}


<!-- BANNER WRAP -->
<div class="banner-wrap forum-banner">
    <!-- BANNER -->
    <div class="banner grid-limit">
        <h2 class="banner-title">Login and Register</h2>
        <p class="banner-sections">
            <span class="banner-section">Home</span>
            <!-- ARROW ICON -->
            <svg class="arrow-icon">
                <use xlink:href="#svg-arrow"></use>
            </svg>
            <!-- /ARROW ICON -->
            <span class="banner-section">Login and Register</span>
        </p>
    </div>
    <!-- /BANNER -->
</div>
<!-- /BANNER WRAP -->
<!-- LIVE NEWS WIDGET WRAP -->
<div class="live-news-widget-wrap">
    <!-- LIVE NEWS WIDGET -->
    <div class="live-news-widget grid-limit">
        <!-- LIVE NEWS WIDGET STAIRS -->
        <div class="live-news-widget-stairs left red">
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
        </div>
        <!-- /LIVE NEWS WIDGET STAIRS -->
        <!-- LIVE NEWS WIDGET STAIRS -->
        <div class="live-news-widget-stairs right blue">
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
            <div class="live-news-widget-stair"></div>
        </div>
        <!-- /LIVE NEWS WIDGET STAIRS -->
        <!-- LIVE NEWS WIDGET TITLE WRAP -->
        <div class="live-news-widget-title-wrap">
            <img class="live-news-widget-icon" src="~/Content/img/icons/live-news-icon.png" alt="live-news-icon">
            <p class="live-news-widget-title">Live News</p>
        </div>
        <!-- /LIVE NEWS WIDGET TITLE WRAP -->
        <!-- LIVE NEWS WIDGET TEXT WRAP -->
        <div id="lineslide-wrap1" class="live-news-widget-text-wrap">
            <p class="live-news-widget-text"></p>
        </div>
        <!-- /LIVE NEWS WIDGET TEXT WRAP -->
    </div>
    <!-- /LIVE NEWS WIDGET -->
</div>
<!-- /LIVE NEWS WIDGET WRAP -->
<!-- LAYOUT CONTENT FULL -->
<div class="layout-content-full grid-limit">
    <!-- GRID 2 1COL -->
    <div class="grid2-1col centered">
        <!-- TAB WRAP -->
        <div id="tab-login-register" class="tab-wrap">
            <!-- TAB HEADER -->
           
            <!-- /TAB HEADER -->
            <!-- TAB BODY -->
            <div class="tab-body">

                @if (Session["login"] != null) { 
                <!-- TAB ITEM -->

                <div class="tab-item">
                    <!-- FORM BOX -->
                    <div class="form-box">
                        <!-- SECTION TITLE WRAP -->
                        <div class="section-title-wrap blue">
                            <h1>@TempData["HatalıGiris"]</h1>
                            <h2 class="section-title medium">Create A Team</h2>
                            <div class="section-title-separator"></div>
                        </div>
                        <!-- /SECTION TITLE WRAP -->
                        <!-- FORM WRAP -->
                        <form method="post" action="/Team/CreateTeam" id="form-wrap" class="form-wrap">
                            <!-- FORM ROW -->
                            <div class="form-row">
                                <!-- FORM ITEM -->
                                <div class="form-item blue">
                                    <label for="login_email" class="rl-label">TeamName</label>
                                    <input type="text" id="login_email" name="TeamName" placeholder="Enter your team name">
                                </div>
                                <!-- /FORM ITEM -->
                            </div>
                            <!-- /FORM ROW -->

                            <!-- FORM ROW -->
                            <div class="form-row">
                                <!-- FORM ITEM -->
                                <div class="form-item blue">
                                    <label for="login_pwd" class="rl-label">Team Tag</label>
                                    <input type="password" id="login_pwd" name="TeamTag" placeholder="Enter your team tag">
                                </div>
                                <!-- /FORM ITEM -->
                            </div>
                            <!-- /FORM ROW -->
                            <!-- FORM CONFIRM ROW -->
                          
                            <!-- /FORM CONFIRM ROW -->
                            <!-- FORM ACTIONS -->
                            <div class="form-actions full">
                                <!-- BUTTON -->

                                <button type="submit" class="button blue full">Create</button>
                                <!-- /BUTTON -->
                                <!-- SOCIAL BUTTONS -->
                                
                                <!-- /SOCIAL BUTTONS -->
                            </div>
                            <!-- /FORM ACTIONS -->
                        </form>
                        <!-- /FORM WRAP -->
                    </div>
                    <!-- /FORM BOX -->
                </div>
                <!-- /TAB ITEM -->
                <!-- TAB ITEM -->

                <!-- /TAB ITEM -->
                }
                else
                {
                    <h1>Önce Giriş Yapmalısınız.</h1>
                }
            </div>
            <!-- /TAB BODY -->
        </div>
        <!-- /TAB WRAP -->
    </div>
    <!-- /GRID 2 1COL -->
</div>
<!-- LAYOUT CONTENT FULL -->
